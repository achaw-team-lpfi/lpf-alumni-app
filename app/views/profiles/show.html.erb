<div class="">
<h1 class ="page-header">Profile for <%= @profile.fullname %></h1>

<ul class="nav nav-tabs">
  <li class="active"><a href="#personal-info" data-toggle="tab" aria-expanded="true">Personal Info</a></li>
  <li class=""><a href="#contact-info" data-toggle="tab" aria-expanded="false">Contact Info</a></li>
  <li class=""><a href="#LPFI-info" data-toggle="tab" aria-expanded="false">LPFI Info</a></li>

</ul>
<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in" id="personal-info">
  <ul>

    <li>First Name: <%= @profile.firstname %></li>
    <li>Middle Name: <%= @profile.middlename %></li>
    <li>Last Name: <%= @profile.lastname %></li>
    <li>Site: <%= @profile.site %></li>
    <li>Site Abbr: <%= @profile.siteabbr %></li>
    <li>LPFI ID: <%= @profile.lpfi_id %></li>
  </ul>
  </div>
  <div class="tab-pane fade" id="contact-info">
  <ul>
    <li>Address 1: <%= @profile.address1 %></li>
    <li>Address 2: <%= @profile.address2 %></li>
    <li>City: <%= @profile.city %></li>
    <li>State: <%= @profile.state %></li>
    <li>County: <%= @profile.country %></li>
    <li>Home Phone: <%= @profile.homephone %></li>
    <li>Work Phone: <%= @profile.workphone %></li>
    <li>Cell Phone: <%= @profile.cellphone %></li>
    <li>Email: <%= @profile.email %></li>
  </ul>
  </div>
  <div class="tab-pane fade" id="LPFI-info">
    <p><%= @profile.site %></p>
  </div>
</div>



<%if current_user%>
      <%if current_user.admin%>
        <li><%= link_to "Edit Profile", edit_profile_path %></li>
        <li><%= link_to "Delete", "/profiles/#{@profile.id}", {method: :delete}%></li>
      
        <% elsif current_user.id.to_i != params[:id].to_i  %>


      <%elsif current_user.id == @profile.user.id %>
        <a href=<%="/profiles/#{@profile.id}/edit"%> class="btn btn-primary">Edit Profile</a>
        <li><%= link_to "Delete", "/profiles/#{@profile.id}", {method: :delete}%></li>

      <%end%>
<%end%>

</div>

