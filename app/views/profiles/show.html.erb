  <tr><th>Graduated College?: </th><td><%= @profile.graduatedcollege %></td></tr>
  <tr><th>Employment: </th><td><%= @profile.employment %></td></tr>
  <tr><th>Searching For: </th><td><%= @profile.change_me %></td></tr>
  <tr><th>Job Title: </th><td><%= @profile.job_title %></td></tr>
  <tr><th>Grad School?: </th><td><%= @profile.grad_school %></td></tr>
  <tr><th>Grad School Major: </th><td><%= @profile.grad_school_major %></td></tr>
  <tr><th>Grad School Graduation Year: </th><td><%= @profile.grad_school_year_graduated %></td></tr>
  <tr><th>LinkedIn Profile: </th><td><%= @profile.linkedin %></td></tr>
  <tr><th>Interested in Networking Opportunities?: </th><td><%= @profile.networking_interest %></td></tr>
  <tr><th>Current City, State: </th><td><%= "#{@profile.current_city}, #{@profile.current_state}" %></td></tr>
  <tr><th>Career Areas of Interest: </th><td><%= @profile.career_interests %></td></tr>
  <tr><th>Professional Development Areas of Interest: </th><td><%= @profile.change_me %></td></tr>
  </table>
  </div>
  </div>
</div>




</div>

